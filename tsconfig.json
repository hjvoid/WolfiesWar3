{
	"compilerOptions": {
		"target": "ES2015",
		"module": "ES2015",

		"strict": false,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,

		"allowJs": true,
		"allowUnreachableCode": false,
		"noImplicitAny": false,
		"sourceMap": true,
		"strictPropertyInitialization": false,

		"moduleResolution": "node",
		"lib": ["dom", "esnext"],

		"resolveJsonModule": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "**/*.spec.ts"]
}
